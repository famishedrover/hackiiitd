<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.archi.myapplication.BussinessActivity">


    <LinearLayout
        android:layout_width="368dp"
        android:layout_height="495dp"
        android:layout_margin="20px"
        android:gravity="center"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="11dp">


        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="BUSINESS" />

        <EditText
            android:id="@+id/business_uid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="USER-NAME" />

        <EditText
            android:id="@+id/business_pass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="PASSWORD" />

        <Button
            android:id="@+id/business_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:text="LOGIN"
            android:textColor="#ffffff" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="300px"
            android:text="Not an Excisting User ? Click here to Sign Up" />

        <Button
            android:id="@+id/business_signup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50px"
            android:background="@color/colorPrimary"
            android:text="SIGNUP"
            android:textColor="#ffffff" />

    </LinearLayout>

</RelativeLayout>
